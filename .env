POSTGRES_USER=postgres
POSTGRES_PASSWORD=change_this_to_a_strong_password
POSTGRES_DB=app_db
POSTGRES_HOST=db
POSTGRES_PORT=5432

# Optional initialization args (used only during database initialization; does not affect running containers; adjust locale/encoding as needed)
POSTGRES_INITDB_ARGS=--encoding=UTF-8 --locale=C

# Common application connection string (expand/escape as required by your framework)
DATABASE_URL=postgres://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# Optional SSL mode: disable|allow|prefer|require|verify-ca|verify-full
PGSSLMODE=prefer